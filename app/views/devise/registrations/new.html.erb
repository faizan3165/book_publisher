<div class="container">
  <h2 class="display-4 text-center" >Sign up</h2>

  <div class="row"></div>
  <div class="col-12">
    <div class="card shadow-lg rounded">
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div>
            <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: {class: "my-3", autocomplete: "email" }%>
            <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: {class: "my-3", autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                required: true,
                input_html: {class: "my-3", autocomplete: "new-password" } %>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, "Sign up", class: "btn btn-success my-3" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
</div>
